<%= content_for :head do %>
<script type='text/javascript' data-cfasync='false' src='//dsms0mj1bbhn4.cloudfront.net/assets/pub/shareaholic.js' data-shr-siteid='2a3a338d5a793821ef975b0f0e3b37ae' async='async'></script>


<% end %>


<%= content_for :full do %>

<div class="col-md-8 full">

  <h2>
  <%= @pressrelease.title %>
</h2>

<div class="date-share-row">
<div class="col-sm-4 date-col">
<h6 class="text-muted"><%= @pressrelease.publish_at.to_time.strftime('%B %d %Y')%></h6> 
</div>
<div class="col-sm-8 share-col">
	<div class='shareaholic-canvas share-icons' data-app='share_buttons' data-app-id='25528828'></div>
</div>
</div>
	
<p class="lead">
 
  <%= @pressrelease.intro %>
</p>


<div class="pr-body"><%= simple_format(@pressrelease.body) %></div>

<p class="bta"><i class="fa fa-arrow-left" aria-hidden="true"></i> <%= link_to 'Back to Press Releases', pressreleases_path %>
	
</div>

<div class="rh col-md-4">
	 	<% if current_user %>
	 	<div class="edit alert" >
	 <i> <%= link_to ' Edit ', edit_pressrelease_path(@pressrelease), class: "admin-edit fa fa-edit", dismissible: true %> </i>|<i> <%= link_to ' Delete', @pressrelease, method: :delete, data: { confirm: 'Are you sure?' }, class: "admin-edit fa fa-trash" %></i>
 
	 <button class="close" data-dismiss="alert" type="button">
	     <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
	   </button>
   
	 </div>
	<% end %>
	
	<% @prs.each do |pr| %>
	<% unless pr == @pressrelease %>
	<h4><%= link_to pr.title, pr %></h4>
	<h6 class="text-muted"><%= pr.publish_at.strftime("%B %d %Y")%></h6> 
	<% end %>
	<% end %>
	
	
</div>
<% end %>